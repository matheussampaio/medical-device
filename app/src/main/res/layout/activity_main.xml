<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.medicaldevice.screen.MainActivity">

    <RelativeLayout
        android:id="@+id/commandsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/permissionBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PERMISSION" />

        <Button
            android:id="@+id/initBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="INIT" />

        <Button
            android:id="@+id/closeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLOSE"
            android:visibility="invisible" />

        <Button
            android:id="@+id/dmsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/closeBtn"
            android:text="DMS"
            android:visibility="invisible" />

        <Button
            android:id="@+id/dmatBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/dmsBtn"
            android:text="DM@"
            android:visibility="invisible" />

        <Button
            android:id="@+id/dmfBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/dmatBtn"
            android:text="DMF"
            android:visibility="invisible" />

        <Button
            android:id="@+id/dmquestionBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/closeBtn"
            android:text="DM?"
            android:visibility="invisible" />

        <Button
            android:id="@+id/dmpBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dmsBtn"
            android:layout_toRightOf="@+id/dmquestionBtn"
            android:text="DMP"
            android:visibility="invisible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/outputContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commandsContainer"
        android:padding="8dp">

        <!--<TextView
            android:id="@+id/outputTxtView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:scrollbars="vertical"
            />-->
        <ScrollView
            android:id="@+id/SCROLLER_ID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:fillViewport="true">

            <TextView
                android:id="@+id/outputTxtView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                />

        </ScrollView>

    </RelativeLayout>


</RelativeLayout>
